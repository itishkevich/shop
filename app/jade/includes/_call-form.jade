form.form    .form__title Заказать Звонок    .form-line        .form-line__label            label.form-line__label-text Ваше Имя        .form-line__field            input(class='form-input required', type='text', name='name', placeholder='Имя')    .form-line        .form-line__label            label.form-line__label-text Телефон        .form-line__field            input(class='form-input required', type='text', name='phone', placeholder='Телефон')    .form-line        .form-line__label            label.form-line__label-text Дата звонка        .form-line__field            ul.form-select-list(name='day')                - for (var x = 1; x <= 31; x++)                    if(x < 10)                        li.form-select-list__item= '0' + x                    else                        li.form-select-list__item= x            ul.form-select-list(name='month')                - for (var x = 1; x <= 12; x++)                    if(x < 10)                        li.form-select-list__item= '0' + x                    else                        li.form-select-list__item= x    .form-line        .form-line__field            textarea(class='form-textarea required', name='msg', placeholder='Комментарий')    .btn-container        input(class='btn', type='submit', value='Отправить')        input(class='btn', type='reset', value='Очистить')