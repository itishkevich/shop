form.form    .form-container        .form__title Заказать звонок        .form-line            .form-line__label                label.form-line__label-text Ваше имя            .form-line__field                input(class='form-input required', type='text', name='name', placeholder='Имя')        .form-line            .form-line__label                label.form-line__label-text Телефон            .form-line__field                input(class='form-input required', type='text', name='phone', placeholder='Телефон')        .form-line            .form-line__label                label.form-line__label-text Дата звонка            .form-line__field.form-line__field_right                .custom-select                    .form-input.custom-select__control(name='day', data-default='01') 01                    ul.custom-select__list(data-name='dayList')                        - for (var x = 1; x <= 31; x++)                            if(x < 10)                                li.custom-select__list-item(data-value='0' + x)= '0' + x                            else                                li.custom-select__list-item(data-value=x)= x                .custom-select                    .form-input.custom-select__control(name='month', data-default='11') 11                    ul.custom-select__list(dat-name='monthList')                        - for (var x = 1; x <= 12; x++)                            if(x < 10)                                li.custom-select__list-item(data-value='0' + x)= '0' + x                            else                                li.custom-select__list-item(data-value=x)= x        .form-line            .form-line__field                textarea(class='form-textarea required', name='msg', placeholder='Комментарий')        .btn-container            input(class='btn btn_to_left', type='submit', value='Отправить')            input(class='btn btn_neg btn_to_right', type='reset', value='Очистить')