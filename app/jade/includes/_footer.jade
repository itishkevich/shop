footer.footer    .container        .container__left            .footer__logo                img(src='img/misc/logo-white.png', alt='ЭпплShop', class='footer__logo-img')                .logo__text ЭпплShop        .container__right            nav.footer__sitemap                .footer__sitemap-col                    .footer-links-title  О магазне                    ul.footer-links                        each item in ['О нас', 'Наши цены', 'Наши скидки', 'Акции']                            li.footer-links__item                                a(class='footer-links__link', href='#')=item                .footer__sitemap-col                    .footer-links-title  Каталог                    ul.footer-links                        each item in ['Смартфоны', 'Планшеты', 'Компьютеры', 'Аксессуары']                            li.footer-links__item                                a(class='footer-links__link', href='#')=item                .footer__sitemap-col                    .footer-links-title  Контакты                    ul.footer-links                        each item in ['Телефоны', 'Адреса', 'Карта проезда', 'Обратная связь']                            li.footer-links__item                                a(class='footer-links__link', href='#')=item            .footer__socials                .footer__socials-btns                    ul.social-btns                        each item in ['appstore', 'googleplay']                            li.social-btns__item                                a(class='social-btns__link', href='#')=item                                    img(src='img/misc/'+item+'-btn.png', alt=item, class='social-btns__img')                .footer__socials-icons                    ul.social-list                        each item in ['vk', 'fb', 'tw']                            li.social-list__item                                a(class='social-list__link', href='#')=item                                    img(src='img/icon/'+item+'-icon.png', alt=item, class='social-list__icon')