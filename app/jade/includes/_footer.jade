footer.footer    .container        .container__left            .footer__logo                img(src='img/misc/logo-white.png', alt='ЭпплShop', class='footer__logo-img')                .logo__text ЭпплShop        .container__right            .footer__sitemap                nav.footer__sitemap-col                    .footer-links-title  О магазне                    ul.footer-links                        each item in ['О нас', 'Наши цены', 'Наши скидки', 'Акции']                            li.footer-links__item                                a(class='footer-links__link', href='#')=item                nav.footer__sitemap-col                    .footer-links-title  Каталог                    ul.footer-links                        each item in ['Смартфоны', 'Планшеты', 'Компьютеры', 'Аксессуары']                            li.footer-links__item                                a(class='footer-links__link', href='#')=item                nav.footer__sitemap-col                    .footer-links-title  Контакты                    ul.footer-links                        each item in ['Телефоны', 'Адреса', 'Карта проезда', 'Обратная связь']                            li.footer-links__item                                a(class='footer-links__link', href='#')=item            .footer-socials                .footer-social__btns                    ul.social-btns                        each item in ['appstore', 'googleplay']                            li.social-btns__item                                a(class='social__btn social__btn_' + item, href='#')=item                .footer-social__icons                    ul.social-list                        each item in ['vk', 'facebook', 'twitter']                            li.social-list__item                                a(class='social-list__icon social-list__icon_'+item, href='#')=item